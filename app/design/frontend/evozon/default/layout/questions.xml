<layout version="0.1.0">
    <catalog_product_view>     
        <reference name="product.info">
            <block type="evozon_qa/form" name="evozon_qa_form" template="catalog/product/form.phtml"/>
            <block type="evozon_qa/question" name="questionsBlock" template="catalog/product/questions.phtml"/>
        </reference>  
        <reference name="head">
            <action method="addJs">
                <script>evozon/qa/message.js</script>
            </action> 
            <action method="addCss">
                <stylesheet>../../evozon/default/css/message_style.css</stylesheet>
            </action>
        </reference>    
    </catalog_product_view>
</layout>
