<layout version="0.1.0">
    <catalog_category_layered>
        <remove name="product_list"/>     
        <reference name="category.products">
            <block type="evozon_catalog/category_text" name="evozon_text_plain_text" template="catalog/category/text.phtml"/>
            <action method="setTemplate">
                <template>catalog/category/text.phtml</template>
            </action>
        </reference>      
    </catalog_category_layered>

    <catalog_category_default>
        <remove name="product_list"/>    
        <reference name="category.products">
            <block type="evozon_catalog/category_text" name="evozon_text_plain_text" template="catalog/category/text.phtml"/>
            <action method="setTemplate">
                <template>catalog/category/text.phtml</template>
            </action>
        </reference>   
    </catalog_category_default>
</layout>