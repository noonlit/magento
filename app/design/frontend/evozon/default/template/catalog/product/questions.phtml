<h1>Customer Q&A:</h1>
<?php
$questions = $this->fetchQuestions();
if (empty($questions->getData())) :
    echo 'There are no questions for this product.';
endif;
?>
<div class="reviews-container">
    <?php
    foreach ($questions as $question):
        ?>
        <div class="row-question">
            <?php
            $userName = $question->getData('user_name');
            $text = $question->getData('question');
            $adminName = $question->getData('firstname') . ' ' . $question->getData('lastname');
            $answer = $question->getData('answer');
            ?>
            <div id="qa_name"><?php echo $userName ?></div>
            <div id="qa_text"><?php echo $text ?></div>
            <?php if ($answer) : ?>
                <div class="row-answer">
                    <div id="qa_name"><?php echo $adminName ?></div>
                    <div id="qa_text"><?php echo $answer ?></div>
                </div>
            <?php endif; ?>
        </div><br>
    <?php endforeach; ?>
</div>

<h1>Have a question? Ask away:</h1>
<form action="<?php echo $this->getUrl('question/question/add') ?>" id="qa_form" method="post">  
    <label for="username" class="required"><em>*</em><?php echo $this->__('Username') ?></label>
    <div class="input-box">
        <input type="text" class="input-text required-entry" name="qa_username" id="qa_username" value="<?php echo $this->escapeHtml($this->getEmailValue()) ?>" placeholder="<?php
        $loggedUser = Mage::getSingleton('customer/session')->getCustomer();
        $firstname = $loggedUser->getFirstname();
        $lastname = $loggedUser->getLastname();
        if ($firstname && $lastname):
            echo $this->__($firstname . ' ' . $lastname);
        else:
            echo $this->__("Type your username here...");
        endif;
        ?>" />
    </div>

    <label for="question" class="required"><em>*</em><?php echo $this->__('Question') ?></label>
    <div class="input-box">
        <input type="email" class="input-text required-entry"  placeholder="Type your question here..." name="qa_question" id="qa_question" value="<?php echo $this->escapeHtml($this->getEmailValue()) ?>" />
    </div>

    <input type="hidden" name="qa_current_product" id="qa_current_product" value="<?php echo $this->getCurrentProductId() ?>">
    <input id="q_submit_button" type="submit" value="SUBMIT">        
</form>
