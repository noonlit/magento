<?xml version="1.0" ?>
<layout>
    <adminhtml_qa_index>
        <reference name="content">
            <block type="evozon_qa/adminhtml_questions" name="questions_grid_container" />
        </reference>
    </adminhtml_qa_index>
    
    <adminhtml_qa_answers>
        <reference name="content">
            <block type="evozon_qa/adminhtml_answers" name="answers_grid_container" />
        </reference>
    </adminhtml_qa_answers>

    <adminhtml_qa_edit>
        <reference name="head">
            <action method="addJs">
                <file>custom-menu/admin.js</file>
            </action>
        </reference>
        <reference name="content">
            <block type="evozon_qa/adminhtml_questions_edit" name="questions_edit_container" />
        </reference>
    </adminhtml_qa_edit>

    <adminhtml_qa_grid>
        <remove name="root" />
        <block type="evozon_qa/questions_grid" name="questions_grid" output="toHtml" />
    </adminhtml_qa_grid>
</layout>
