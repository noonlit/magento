<config>
    	
    <modules>
        <Evozon_Customer>
            <version>0.1.0</version>
        </Evozon_Customer>
    </modules>
    
    <global>
        <resources>
            <evozon_customer_setup>
                <setup>
                    <module>Evozon_Customer</module>
                    <class>Evozon_Customer_Model_Resource_Setup</class>
                    <connection>
                        <use>core_setup</use>
                    </connection>
                </setup>
                
                <evozon_customer_write>
                    <connection>
                        <use>core_write</use>
                    </connection>
                </evozon_customer_write>
                
                <evozon_customer_read>
                    <connection>
                        <use>core_read</use>
                    </connection>
                </evozon_customer_read>
            </evozon_customer_setup> 
        </resources>
    </global>
    
    <frontend>
        <layout>
            <updates>
                <evozon_customer>
                    <file>text.xml</file>
                </evozon_customer>                
            </updates>                
        </layout>
    </frontend>	

</config>