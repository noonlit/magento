<?xml version="1.0"?>
<config>	
	<modules>
	<Evozon_Layoutviewer>
		<version>0.1.0</version>
	</Evozon_Layoutviewer>
        </modules>

	<global>
		<models>
			<evozon_layoutviewer>
				<class>Evozon_Layoutviewer_Model</class>
			</evozon_layoutviewer>
			
			<core>
				<rewrite>
					<layout_update>Evozon_Layoutviewer_Model_Layout_Update</layout_update>
				</rewrite>
			</core>
			
		</models>
	
		<events>
			<controller_action_postdispatch>
				<observers>
					<evozon_layoutviewer_model_observer>
						<type>singleton</type>						
						<class>Evozon_Layoutviewer_Model_Observer</class>
						<method>checkForLayoutDisplayRequest</method>
					</evozon_layoutviewer_model_observer>
				</observers>
			</controller_action_postdispatch>
		</events>
	</global>	
</config>
