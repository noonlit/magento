<?xml version="1.0"?>

<config>	
    <modules>
        <Evozon_Catalog>
            <version>0.1.0</version>
        </Evozon_Catalog>
    </modules>
    
    <global>
        <blocks>
            <evozon_catalog>
                <class>Evozon_Catalog_Block</class>
            </evozon_catalog>
        </blocks>
        
        <models>
            <evozon_catalog>
                <class>Evozon_Catalog_Model</class>
            </evozon_catalog>
            
            <evozon_catalog_resource>
                <class>Evozon_Catalog_Model_Resource</class>
            </evozon_catalog_resource>
        </models>
    </global>
    
    <frontend>
        <layout>
            <updates>
                <evozon_catalog>
                    <file>text.xml</file>
                </evozon_catalog>                
            </updates>                
        </layout>
    </frontend>	
</config>