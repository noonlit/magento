<config>
    <modules>
        <Evozon_Configviewer>
            <version>0.1.0</version>
        </Evozon_Configviewer>    
    </modules>
    <global>
        <events>
            <controller_front_init_routers>
                <observers>
                    <Evozon_configviewer_model_observer>
                        <type>singleton</type>
                        <class>Evozon_Configviewer_Model_Observer</class>
                        <method>checkForConfigRequest</method>
                    </Evozon_configviewer_model_observer>
                </observers>
            </controller_front_init_routers>
        </events>
    </global>
</config>
