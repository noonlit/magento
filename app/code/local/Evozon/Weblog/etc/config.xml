<config>
    <modules>
        <Evozon_Weblog>
            <version>0.2.0</version>
        </Evozon_Weblog>    
    </modules>   
    <frontend>
        <routers>
            <weblog>
                <use>standard</use>
                <args>
                    <module>Evozon_Weblog</module>
                    <frontName>weblog</frontName>
                </args>
            </weblog>
        </routers>
    </frontend>
    <global>
        <models>
            <weblog>
                <class>Evozon_Weblog_Model</class>
                <resourceModel>weblog_resource</resourceModel>
            </weblog>
            <weblog_resource>
                <class>Evozon_Weblog_Model_Resource</class>
                <entities>
                    <blogpost>
                        <table>blog_posts</table>
                    </blogpost>
                </entities>
            </weblog_resource>
        </models>
        <resources>
            <weblog_setup>
                <setup>
                    <module>Evozon_Weblog</module>
                    <class>Evozon_Weblog_Model_Resource_Setup</class>
                </setup>
            </weblog_setup>
        </resources>
    </global>
</config>


